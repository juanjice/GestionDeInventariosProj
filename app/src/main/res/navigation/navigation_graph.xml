<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_graph"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/login">

<fragment
    android:id="@+id/home"
    android:name="com.example.gestioninventariosapp.ui.fragments.HomeFragment"
    android:label="Fragmento principal">
    <action
        android:id="@+id/action_home_to_assets"
        app:destination="@id/assets">
        <argument
            android:name="idUser"
            app:argType="string"
            app:nullable="false"/>
    </action>
    <action
        android:id="@+id/action_home_to_documents"
        app:destination="@id/documents"/>
    <action
        android:id="@+id/action_home_to_RemoveItem"
        app:destination="@id/RemoveItem" />
    <action
        android:id="@+id/action_home_to_addItem"
        app:destination="@id/addItem" >
        <argument
            android:name="idUser"
            app:argType="string"
            app:nullable="false"/>
    </action>

</fragment>
    <fragment
        android:id="@+id/assets"
        android:name="com.example.gestioninventariosapp.assets.fragment.AssetsFragment"
        android:label="Fragmento de bienes"
        />

    <fragment
        android:id="@+id/documents"
        android:name="com.example.gestioninventariosapp.documents.fragment.DocumentsFragment"
        android:label="Fragmento de documentos"
        />
    <fragment
        android:id="@+id/addItem"
        android:name="com.example.gestioninventariosapp.assets.fragment.AddItemFragment"
        android:label="Agregar Item al Stock">
        <action
            android:id="@+id/action_addItem_to_assets"
            app:destination="@id/assets"

            >
            <argument
                android:name="idUser"
                app:argType="string"
                app:nullable="false"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/RemoveItem"
        android:name="com.example.gestioninventariosapp.ui.fragments.RemoveStockFragment"
        android:label="Quitar items del Stock"/>

    <fragment
        android:id="@+id/login"
        android:name="com.example.gestioninventariosapp.users.fragment.LoginFragment"
        android:label="Iniciar Sesion">
        <action
            android:id="@+id/action_login_to_createAccount"
            app:destination="@id/createAccount" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/home" >

        </action>

    </fragment>
    <fragment
        android:id="@+id/createAccount"
        android:name="com.example.gestioninventariosapp.users.fragment.SingUpFragment"
        android:label="Crear Cuenta">
        <action
            android:id="@+id/action_createAccount_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_createAccount_to_home"
            app:destination="@id/home" />
    </fragment>
</navigation>