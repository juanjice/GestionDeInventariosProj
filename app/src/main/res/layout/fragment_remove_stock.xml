<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_normal"
    android:layout_marginTop="@dimen/margin_small"
    app:cardElevation="@dimen/card_elevation"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/imagenViewAsset"
            android:layout_width="@dimen/width_image_card"
            android:layout_height="@dimen/height_image_card"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.101"
            tools:src="@drawable/ic_baseline_image_24" />

        <TextView
            android:id="@+id/textViewTittleAsset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="Titulo"
            android:textColor="@color/black"
            android:textSize="@dimen/title_card_view"
            app:layout_constraintStart_toEndOf="@id/imagenViewAsset"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDescAssets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:maxWidth="240dp"
            android:maxHeight="90dp"
            android:text="@string/asset_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/textViewTittleAsset"
            app:layout_constraintTop_toBottomOf="@id/textViewTittleAsset"
            app:layout_constraintVertical_bias="0.125" />

        <Button

            android:id="@+id/buttonLess"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_marginStart="4dp"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewDescAssets"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescAssets"
            app:layout_constraintStart_toEndOf="@+id/RemoveItem"
            app:layout_constraintVertical_bias="0.70" />


        <Button

            android:id="@+id/buttonMore"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_marginStart="100dp"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/editTextQtity"
            app:layout_constraintTop_toBottomOf="@+id/Switch_mostrar"
            app:layout_constraintStart_toEndOf="@+id/editTextQtity"
            app:layout_constraintVertical_bias="0.84" />



        <Button
            android:id="@+id/RemoveItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="Remover"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imagenViewAsset"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.897"


            />

        <EditText
            android:id="@+id/editTextQtity"
            android:layout_width="90dp"
            android:layout_height="41dp"
            android:layout_marginStart="160dp"

            android:ems="10"
            android:inputType="textPersonName"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/buttonLess"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/buttonLess"
            app:layout_constraintVertical_bias="0.856" />

        <Switch
            android:id="@+id/Switch_mostrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar"
            tools:layout_editor_absoluteX="254dp"
            tools:layout_editor_absoluteY="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.101"
            tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>