<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".assets.fragment.AddItemFragment">

    <TextView
        android:id="@+id/tittle_add_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="@string/add_asset_tittle"
        android:textColor="@color/black"
        android:textSize="@dimen/text_view_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_big"
        android:text="Name:"
        android:textColor="@color/black"
        android:textSize="@dimen/title_card_view"
        app:layout_constraintStart_toStartOf="@id/new_asset_name"
        app:layout_constraintTop_toBottomOf="@id/tittle_add_fragment" />
    <EditText
        android:id="@+id/new_asset_name"
        android:layout_width="@dimen/ancho_inputs"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:layout_marginTop="@dimen/margin_normal"
        android:inputType="text"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="Description:"
        android:textColor="@color/black"
        android:textSize="@dimen/title_card_view"
        app:layout_constraintStart_toStartOf="@id/new_asset_name"
        app:layout_constraintTop_toBottomOf="@id/new_asset_name" />
    <EditText
        android:id="@+id/new_asset_desc"
        android:layout_width="@dimen/ancho_inputs"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:layout_marginTop="@dimen/margin_normal"
        android:inputType="text"
        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="Stock Number:"
        android:textColor="@color/black"
        android:textSize="@dimen/title_card_view"
        app:layout_constraintStart_toStartOf="@id/new_asset_name"
        app:layout_constraintTop_toBottomOf="@id/new_asset_desc" />
    <EditText
        android:id="@+id/new_asset_cantidad"
        android:layout_width="@dimen/ancho_inputs"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3"
        android:layout_marginTop="@dimen/margin_normal"
        android:inputType="number"
        />
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="Stock Type:"
        android:textColor="@color/black"
        android:textSize="@dimen/title_card_view"
        app:layout_constraintStart_toStartOf="@id/new_asset_name"
        app:layout_constraintTop_toBottomOf="@id/new_asset_cantidad"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/new_asset_type"
        android:layout_width="@dimen/ancho_inputs"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text4"
        android:layout_marginTop="@dimen/margin_normal"
        />
    <Button
        android:id="@+id/add_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acept_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_asset_type"
        android:layout_marginTop="@dimen/margin_big"/>




</androidx.constraintlayout.widget.ConstraintLayout>