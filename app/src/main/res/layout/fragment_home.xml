<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.gridlayout.widget.GridLayout
        android:layout_width="371dp"
        android:layout_height="491dp"

        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_big"
        android:layout_marginEnd="@dimen/margin_normal"
        app:columnCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="3">

        <ImageButton
            android:id="@+id/assetsButton"
            android:background="@color/md_blue_700"
            android:contentDescription="@string/text_assets_menu"
            android:src="@drawable/ic_baseline_add_business_24"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1">

        </ImageButton>

        <ImageButton
            android:id="@+id/documentsButton"
            android:layout_marginStart="@dimen/margin_normal"
            android:background="@color/md_blue_700"
            android:contentDescription="@string/text_assets_menu"
            android:src="@drawable/ic_baseline_book_24"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/input_assetButton"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/md_blue_700"
            android:contentDescription="@string/text_assets_menu"
            android:src="@drawable/ic_baseline_add_circle_24"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/group_peopleButton"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/md_blue_700"
            android:contentDescription="@string/text_assets_menu"
            android:src="@drawable/ic_baseline_people_alt_24"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />


    </androidx.gridlayout.widget.GridLayout>

<TextView
    android:id="@+id/text_view_prueba"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:text=""/>



</androidx.constraintlayout.widget.ConstraintLayout>